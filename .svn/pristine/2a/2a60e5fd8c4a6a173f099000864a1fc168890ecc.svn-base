<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp">

            <TextView
                android:id="@+id/maintenance_devicename_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/textcolor"
                android:text="title"
                android:textSize="16sp" />

            <TextView
                android:layout_below="@id/maintenance_devicename_list"
                android:id="@+id/maintenance_note_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="内容"
                android:textColor="@color/textcolor"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_below="@id/maintenance_note_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="8dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/time"
                    android:layout_marginRight="5dp"
                    />
            <TextView
                android:id="@+id/maintenance_time_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="时间"
                android:textColor="@color/textcolor"
                android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="-1dp"
            android:background="#0489E6"
            android:layout_marginTop="-1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                >
            <ImageView
                android:id="@+id/check_maintenance_image_two"
                android:layout_width="15dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/file1" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/check_maintenance_image_two"
                android:id="@+id/maintenance_text_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/check_maintenance_devicename_two"
                android:text="相关文档"
                android:ems="2"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>