<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="19dp"
            android:text="开始时间:"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="24dp"
            android:text="结束时间:"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/managecheck_end_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textView2"
            android:background="@drawable/text_view_border"
            android:gravity="center"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/managecheck_start_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignLeft="@+id/managecheck_end_time"
            android:background="@drawable/text_view_border"
            android:gravity="center"
            android:ems="10" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/managecheck_end_time"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:text="关键字:" />

        <EditText
            android:id="@+id/managecheck_word_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignLeft="@+id/managecheck_end_time"
            android:background="@drawable/text_view_border"
            android:gravity="center"
            android:ems="10" />

        <Button
            android:id="@+id/managecheck_btn1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/managecheck_word_time"
            android:layout_marginTop="18dp"
            android:background="@drawable/button_luru_com"
            android:textColor="#ffffff"
            android:text="高级查询" />

    </RelativeLayout>

</LinearLayout>
