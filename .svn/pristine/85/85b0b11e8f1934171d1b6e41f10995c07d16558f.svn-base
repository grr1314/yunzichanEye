<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_margin_top"
            android:orientation="vertical">


    <android.support.v7.widget.CardView

        app:cardBackgroundColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_iconuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_user"
           android:padding="10dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_iconuser"
            android:layout_centerVertical="true"
            android:textColor="#618295"
            android:textSize="16sp"
            android:text="姓名:"/>
     <!--   <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_iconuser"
            android:textColor="#618295"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:text="职位:"/>-->

    </RelativeLayout>
    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:contentPadding="10dp"
            app:cardBackgroundColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                android:layout_width="2dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tv_devices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="设备信息"
                android:layout_centerVertical="true"
                android:textColor="#618295"
                android:textSize="16sp"
                />
               </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/rl"
                    android:background="@color/divider_color"/>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rl"
                android:text="设备编号:"
                android:textColor="#618295"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/check_devicesno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/textView4"
                android:layout_below="@id/rl"
                android:textColor="#618295"
                android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_devicesname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="7dp"
                    android:layout_below="@id/textView4"
                    android:text="设备名称:"
                    android:textColor="#618295"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/check_devicename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@id/tv_devicesname"
                    android:layout_below="@id/textView4"
                    android:textColor="#618295"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/check_devicename"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:text="设备类型:"
                    android:textColor="#618295"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/check_devicetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/check_devicename"
                    android:layout_toRightOf="@+id/tv_type"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="7dp"
                    android:textColor="#618295"
                    android:textSize="16sp"
                     />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/check_devicetype"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:text="设备厂商:"
                    android:textColor="#618295"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/check_devicechangshang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="7dp"
                    android:layout_below="@id/check_devicetype"
                    android:layout_toRightOf="@id/textView3"
                    android:textColor="#618295"
                    android:textSize="16sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                app:contentPadding="10dp"
                app:cardBackgroundColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <RelativeLayout
                    android:id="@+id/rll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <TextView
                    android:layout_width="2dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorPrimary"/>
                <TextView
                    android:id="@+id/tv_xuncha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:text="巡查信息"
                    android:textColor="#618295"
                    android:textSize="16sp"
                    />
                  </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/rll"
                        android:background="@color/divider_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/rll"
                        android:text="设备巡检情况:"
                        android:textColor="#618295"
                        android:textSize="16sp" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/add_content"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        />


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        android:layout_marginTop="30dp"
                        android:spinnerMode="dropdown" />

                    <Button
                        android:id="@+id/maintenance_btn_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="80dp"
                        android:background="@drawable/btn_upload_numal"
                        android:padding="5dp"
                        android:text="提交信息"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>